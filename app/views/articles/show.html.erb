<div class="article">
	<h1>Name: <%= @article.name %></h1>
	<p>Content: <%= @article.content %></p>
	<div class="comments">
		<%= render 'comments/list', item: @article%>
	</div>
</div>
<%= link_to 'Edit', edit_article_path(@article)%>
<%= link_to 'Destroy', @article, method: :delete,remote: true, data: { confirm: 'Are you sure?' } %>