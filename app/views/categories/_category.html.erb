<div class="category">
  <h2>
    <%= category.name%>
  </h2>
  <p>
    <%= category.description%>
  </p>
  <div class="actions">
    <%= link_to 'Show', category_path(category)  %>
    <%= link_to 'Edit', edit_category_path(category) %>
    <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>