<%= form_with(model: category, local: true) do |form| %>
  <%= render 'shared/errors', item: category%>
  <p>
    <%= form.text_field :name, placeholder: "Name"%>
  </p>
  <p>
    <%= form.text_area :description, placeholder: "Description", rows: 6%>
  </p>
  <div class="submit">
    <%= form.submit %>
  </div>
<% end %>